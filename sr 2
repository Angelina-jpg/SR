5 задача


total_step = 0
element_step = 0
n = int(input())
for i in range(1, n + 1):

    for j in range(1, n + 1):
        if i == j:
            element_step = n - i
            total_step += element_step
        else:
            element_step = 0
        print(element_step, end=' ')
    print('')
print(total_step)
